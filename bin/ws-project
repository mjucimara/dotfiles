#!/usr/bin/env bash
set -euo pipefail

PROJECT="${1:-}"
PROJECTS_DIR="$HOME/Projects"

usage() {
  echo "Uso: ws-project {painel|api|data}" >&2
  exit 1
}

case "$PROJECT" in
  painel)
    ws-toolbox focus "cd $PROJECTS_DIR/painel-eventos && exec bash"
    ;;
  api)
    ws-toolbox focus "cd $PROJECTS_DIR/api-exemplo && exec bash"
    ;;
  data)
    ws-toolbox support "cd $PROJECTS_DIR/data-scripts && exec bash"
    ;;
  *)
    usage
    ;;
esac
