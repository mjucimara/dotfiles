#!/usr/bin/env bash
set -euo pipefail

echo "â›” Removendo toolboxes"

toolbox list | awk '{print $1}' | while read -r tb; do
  toolbox rm -f "$tb" || true
done

echo "ðŸ§¹ Removendo imagens toolbox"
podman images | awk '/toolbox/ {print $3}' | xargs -r podman rmi -f || true

echo "âœ… Reset concluÃ­do"
